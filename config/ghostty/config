# ghostty +show-config --default --docs
# ghostty +list-themes

# Fonts
font-family = GeistMono Nerd Font Mono
# Disable ligatures
font-feature = -calt, -liga, -dlig
font-size = 13

# Theme
theme = Adventure

# Background
background-opacity = 0.7
background-blur = true

# Splits
unfocused-split-opacity = 0.8

# Scrollback
scrollback-limit = 10000000

# Window
fullscreen = false
window-padding-x = 3
window-padding-y = 3
window-title-font-family = GeistMono Nerd Font Mono

# Other
mouse-hide-while-typing = true
copy-on-select = true
quit-after-last-window-closed = false
shell-integration = zsh
shell-integration-features = no-cursor, sudo, title, ssh-env, ssh-terminfo
macos-option-as-alt = true
scroll-to-bottom = keystroke, output
link-url = true

# Keybinds
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right
keybind = alt+j=goto_split:bottom
keybind = alt+h=goto_split:left
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+up=resize_split:up,10
keybind = ctrl+shift+right=resize_split:right,10
keybind = ctrl+shift+down=resize_split:down,10
keybind = ctrl+shift+left=resize_split:left,10
keybind = ctrl+shift+equal=equalize_splits

keybind = ctrl+t=new_tab

keybind = super+shift+r=reload_config

keybind = shift+enter=text:"\n"
